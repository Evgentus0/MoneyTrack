<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PostponedTransaction" TargetType="DataGridRow">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsPostponed}" Value="True">
                <Setter Property="Background" Value="#EFF2C0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>